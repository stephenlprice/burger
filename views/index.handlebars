<!-- As a heading -->
<nav class="navbar navbar-dark bg-danger">
  <div class="container-fluid d-flex justify-content-around">
    <span class="navbar-brand mb-0 h1"><h1>BURGERS I/O</h1></span>
  </div>
</nav>
<br>

<div class="container">
  <div class="row">
    <div class="col-12 col-sm-6">
      <h2 class="d-flex justify-content-around">Uneaten Burgers</h2>
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        {{> burger devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-12 col-sm-6">
      <h2 class="d-flex justify-content-around">Eaten Burgers</h2>
      <ul>
        {{#each burger}}
        {{#if devoured}}
        {{> burger devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-12 col-sm-12">
      <h2>Add a Burger</h2>
      <form id="create-form">
          <div class="form-group">
              <label for="burger">Name:</label>
              <input type="text" id="burger" name="name">
          </div>

          <div class="form-group" action="/api/burgers" method="post">
              <label for="eaten">Eaten</label>
              <input type="radio" name="eaten" value="1" id="eaten" checked></input><br>
              <label for="eaten">Uneaten</label>
              <input type="radio" name="not-eaten" value="0" id="not-eaten">
          </div>

          <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>